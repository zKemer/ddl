         <br><br-->
         <div class="form-group">
            <label for="inputEmail4">Kod</label>
            <textarea type="text" class="form-control" id="commands" name="commands" placeholder=""></textarea>
        </div>

        <div id="newElementId"></div>

      <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-save"></i> Yükle</button>
    </form>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br><br>
<script>
function createNewElement() {
    // First create a DIV element.
	var txtNewInputBox = document.createElement('div');

    // Then add the content (a new input box) of the element.
    txtNewInputBox.innerHTML = `
    <div id="commandinput">
    <br><br>
        <div class="form-row mb-4">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Command Name (Optional)</label>
                <input type="text" class="form-control" id="commandsname" name="commandsname" maxlength="100" placeholder="">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Command (Optional)</label>
                <textarea type="text" style="height: 120%;" class="form-control" id="commands" name="commands" placeholder=""></textarea>
            </div>
        </div>
    </div>
    `;

    // Finally put it where it is supposed to appear.
	document.getElementById("newElementId").appendChild(txtNewInputBox);
}
function removeElement() {
    var myobj = document.getElementById("commandinput");
  myobj.remove();
}

</script>
