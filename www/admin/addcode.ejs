<%- include('static/head.ejs', { bot,user,path}) %>
<div id="content" class="main-content">
    <br><br><br><br><br><br>
    <div class="container">


    <form method="POST">
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Kodun Adı<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="codename" name="codename" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Kodun Açıklaması<span style="color:red">*</span></label>
                <input type="text" class="form-control" id="codedesc" name="codedesc" maxlength="100" placeholder="" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Kodun Kategorisi<span style="color:red">*</span></label>
                <select id="category" name="category" class="form-control" required>
                    <option value="Javascript">JavaScript</option>
                    <option value="BDFD">BDFD</option>
                    <option value="Substructure">Altyapı</option>
                    <option value="HTML">HTML</option>
                    <option value="5Invites">5 Davet</option>
                    <option value="10Invites">10 Davet</option>
                    <option value="15Invites">15 Davet</option>
                    <option value="20Invites">20 Davet</option>
                </select>
            </div>
            
        </div>
        <div class="form-group mb-4">
            <label for="inputAddress">Main (İsteğe Bağlı)</label>
            <textarea type="text" class="form-control" id="main" name="main" placeholder=""></textarea>
        </div>
